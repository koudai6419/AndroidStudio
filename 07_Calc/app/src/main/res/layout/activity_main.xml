<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvCalc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:gravity="right|center_vertical"
        android:text="0"
        android:textColor="#FFEB3B"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="3"
            android:background="#AC8C8C"
            android:onClick="pushClear"
            android:text="c"
            android:textSize="36sp"
            app:backgroundTint="#6582BC" />

        <Button
            android:id="@+id/btWaru"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#AC8C8C"
            android:onClick="pushMark"
            android:tag="4"
            android:text="รท"
            android:textSize="36sp"
            app:backgroundTint="#6582BC" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="pushNumber"
            android:tag="7"
            android:text="7"
            android:textSize="36sp" />

        <Button
            android:id="@+id/bt8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="pushNumber"
            android:tag="8"
            android:text="8"
            android:textSize="36sp" />

        <Button
            android:id="@+id/bt9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="pushNumber"
            android:tag="9"
            android:text="9"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btKakeru"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#AC8C8C"
            android:onClick="pushMark"
            android:tag="3"
            android:text="ร"
            android:textSize="36sp"
            app:backgroundTint="#6582BC" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="pushNumber"
            android:tag="4"
            android:text="4"
            android:textSize="36sp" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="pushNumber"
            android:tag="5"
            android:text="5"
            android:textSize="36sp" />

        <Button
            android:id="@+id/bt6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="pushNumber"
            android:tag="6"
            android:text="6"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btHiku"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#AC8C8C"
            android:onClick="pushMark"
            android:tag="2"
            android:text="-"
            android:textSize="36sp"
            app:backgroundTint="#6582BC" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="pushNumber"
            android:tag="1"
            android:text="1"
            android:textSize="36sp" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="pushNumber"
            android:tag="2"
            android:text="2"
            android:textSize="36sp" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="pushNumber"
            android:tag="3"
            android:text="3"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btTasu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#AC8C8C"
            android:onClick="pushMark"
            android:tag="1"
            android:text="+"
            android:textSize="36sp"
            app:backgroundTint="#6582BC" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="pushNumber"
            android:tag="0"
            android:text="0"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btEqual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="3"
            android:background="#AC8C8C"
            android:onClick="pushMark"
            android:tag="9"
            android:text="="
            android:textSize="36sp"
            app:backgroundTint="#6582BC" />
    </LinearLayout>


</LinearLayout>